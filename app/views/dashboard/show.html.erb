<!DOCTYPE html>
<html>
<head>
  <%= include_gon %>
  <style type="text/css">
    html, body, #map-canvas { height: 100%; margin: 0; padding: 0;}
  </style>
  <script src="directions.js"></script>
  <script type="text/javascript"
          src="//maps.googleapis.com/maps/api/js?key=<%= ENV["GOOGLE_API_KEY"] %>">
  </script>
  <script type="text/javascript">
    var map;
    function initialize() {
      map = new google.maps.Map(document.getElementById('map-canvas'),{
        center: { lat: 39.091919, lng: -94.5757195},
        zoom: 4
      });
    }
    google.maps.event.addDomListener(window, 'load', initialize);
  </script>
</head>

<body>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="index-guide">Welcome, <%= current_user.first_name %>! Tell us about your trip...</h1>
    </div>
  </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row index-guides">
    <%= form_tag(new_trip_path, method: "get") do %>
      <div class="col-md-6">
        <h2 class="index-guide">Origin:</h2>
        <div class="form-group">
          <%= label_tag(:origin, "Address or City") %>
          <%= text_field_tag(:origin, "Origin", class: "form-control", id: "origin-field") %>
        </div>
      </div>
      <div class="col-md-6">
        <h2 class="index-guide">Destination:</h2>
        <div class="form-group">
          <%= label_tag(:destination, "Address or City") %>
          <%= text_field_tag(:destination, "Destination", class: "form-control", id: "destination-field") %>
        </div>
      </div>
      <%= submit_tag("Submit", class: "btn btn-primary btn-lg") %>
    <% end %>
  </div>
</div> <!-- /container -->

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="dropdown">
        <h2 class="index-guide">What type of trip?</h2>
        <br>
        <button class="btn btn-primary btn-lg dropdown-toggle" type="button" id="trip-theme-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          Options
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <li><a href="#">Type 1</a></li>
          <li><a href="#">Type 2</a></li>
          <li><a href="#">Type 3</a></li>
          <li><a href="#">Type 4</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container" id="map-canvas"></div>

</body>
</html>
