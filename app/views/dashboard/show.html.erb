<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="dashboard-text">Welcome, <%= current_user.first_name %></h1>
    </div>
  </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row index-guides">
    <div class="col-md-6">
      <h2 class="index-guide">Enter your origin:</h2>
      <form>
        <div class="form-group">
          <label for="origin">Address or city</label>
          <input type="text" class="form-control" id="origin-field" placeholder="Origin">
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
      </form>
    </div>
    <div class="col-md-6">
      <h2 class="index-guide">Enter your destination:</h2>
      <form>
        <div class="form-group">
          <label for="destination">Address or city</label>
          <input type="text" class="form-control" id="destination-field" placeholder="Destination">
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
      </form>
    </div>
  </div>
</div> <!-- /container -->

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="dropdown">
        <h2 class="index-guide">What type of trip?</h2>
        <br>
        <button class="btn btn-primary btn-lg dropdown-toggle" type="button" id="trip-theme-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          Options
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <li><a href="#">Type 1</a></li>
          <li><a href="#">Type 2</a></li>
          <li><a href="#">Type 3</a></li>
          <li><a href="#">Type 4</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
